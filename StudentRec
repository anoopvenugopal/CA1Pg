class StudentRec:
   def __init__(self,stId,stname,coursecode):
        self.stId=stId
        self.stname=stname
        self.coursecode=coursecode
    # def addData(self):
    #     self.stId=int(input("Enter student id :\t"))
    #     self.stname = input("Enter Name:\t")        
    #     self.coursecode = int(input("Enter coursecode:\t"))
   def retrieve(self):
        print(self.stId,end='\t\t')
        print(self.stname,end='\t\t')
        print(self.coursecode)
st=list()
n=int(input('Enter no of students : '))
print('Students details entry....')
for i in range(n):
    print('Student : ',i+1)
    stId=input('\tID:')
    stname=input('\tName:')
    coursecode=input('\tCourseCode:')
    st.append(StudentRec(stId,stname,coursecode))
print('Student Information')
print('ID\t\tName\t\tCourseCode')
for i in range(n):
    st[i].retrieve()
